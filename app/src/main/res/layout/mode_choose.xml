<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="Chọn chủ đề"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnChude1"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="53dp"
        android:contentDescription="Chude1"
        android:scaleType="fitCenter"
        android:src="@drawable/logohoaqua"
        app:layout_constraintBottom_toBottomOf="@+id/txtChude1"
        app:layout_constraintEnd_toStartOf="@+id/btnChude2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <ImageButton
        android:id="@+id/btnChude2"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="53dp"
        android:contentDescription="Chude2"
        android:scaleType="fitCenter"
        android:src="@drawable/logoxe"
        app:layout_constraintBottom_toBottomOf="@+id/txtChude2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnChude1"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <ImageButton
        android:id="@+id/btnChude3"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="26dp"
        android:contentDescription="Chude3"
        android:scaleType="fitCenter"
        android:src="@drawable/logocat"
        app:layout_constraintBottom_toTopOf="@+id/txtChude3"
        app:layout_constraintEnd_toStartOf="@+id/btnChude4"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnChude4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="14dp"
        android:contentDescription="Chude4"
        android:scaleType="fitCenter"
        android:src="@drawable/logohoathinh"
        app:layout_constraintBottom_toBottomOf="@+id/btnChude3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnChude3"
        app:layout_constraintTop_toTopOf="@+id/btnChude3" />

    <TextView
        android:id="@+id/txtChude1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="299dp"
        android:text="Chủ đề hoa quả"
        app:layout_constraintEnd_toEndOf="@+id/btnChude1"
        app:layout_constraintStart_toStartOf="@+id/btnChude1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtChude2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="Chủ đề ô tô"
        app:layout_constraintEnd_toEndOf="@+id/btnChude2"
        app:layout_constraintStart_toStartOf="@+id/btnChude2"
        app:layout_constraintTop_toBottomOf="@+id/btnChude1" />

    <TextView
        android:id="@+id/txtChude3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:text="Chủ đề động vật"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnChude3"
        app:layout_constraintStart_toStartOf="@+id/btnChude3" />

    <TextView
        android:id="@+id/txtChude4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="37dp"
        android:text="Chủ đề hoạt hình"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnChude4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>